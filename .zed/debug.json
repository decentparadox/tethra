[
  {
    "label": "Tauri Development Debug",
    "adapter": "CodeLLDB",
    // "program": "path_to_program",
    "request": "launch",
    "build": {
      "command": "cargo",
      "args": [
        "build",
        "--manifest-path=./src-tauri/Cargo.toml",
        "--no-default-features"
      ]
    },
    "preRunCommands": ["pnpm run ui:dev"]
  },
  {
    "label": "Tauri Production Debug",
    "adapter": "CodeLLDB",
    // "program": "path_to_program",
    "request": "launch",
    "build": {
      "command": "cargo",
      "args": [
        "build",
        "--release",
        "--manifest-path=./src-tauri/Cargo.toml",
        "--no-default-features"
      ]
    },
    "preRunCommands": ["pnpm run ui:build"]
  }
]
