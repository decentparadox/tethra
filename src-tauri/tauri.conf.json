{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tethra",
  "version": "0.2.0",
  "identifier": "com.decentparadox.tethra",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },


  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUwM0Q2QkUwNkY4REY5RApSV1NkMy9nR3Z0WURCZUdidmY1QlkybUZmcUNnZkxYRE5nT3JGNCtkM1V5R2Q0RFZubFNjd0dESwo=",
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/decentparadox/tethra/releases/latest/download/latest.json"
      ]
    }
  }
}
